<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".LanguageSelectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_language_title"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/button_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/english_button"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_marathi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/marathi_button"/>

</LinearLayout>
    