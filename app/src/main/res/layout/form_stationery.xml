<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for the Stationery Donation Form.
    This layout includes checkboxes for selecting stationery items (notebooks, pens, etc.)
    and input fields for specifying "other" items and quantity.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Type"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@color/primary_text"/>

    <CheckBox
        android:id="@+id/cbNotebooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notebooks / Registers"/>

    <CheckBox
        android:id="@+id/cbPensPencils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pens / Pencils / Erasers"/>

    <CheckBox
        android:id="@+id/cbArtSupplies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Art Supplies (Colors, Brushes)"/>

    <CheckBox
        android:id="@+id/cbSchoolBags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Bags"/>

    <CheckBox
        android:id="@+id/cbOtherStationery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"/>

    <EditText
        android:id="@+id/etOtherStationery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please specify other items"
        android:visibility="gone"
        android:inputType="text"
        android:autofillHints="name"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:hint="@string/quantity_hint"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="none"/>

</LinearLayout>