<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_centerInParent="true"/>
            
        <Button
            android:id="@+id/btnLogoutOrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/design_default_color_error"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="12sp"/>
    </RelativeLayout>

    <!-- Post Requirement Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F0F8FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post New Requirement"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etReqDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What does your NGO need? (e.g. 20 Blankets)"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="description"/>

            <Button
                android:id="@+id/btnPostReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Requirement"
                android:backgroundTint="@color/ngo_blue"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incoming Donations"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- List of Donations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDonationRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_donation_offer"/>

</LinearLayout>